<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".ui.ContactStatusActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/statusRoot"
        >
        <com.circleof6.view.ContactAvatarView
            android:id="@+id/avatarView"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            />
        <TextView
            android:id="@+id/tvContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/avatarView"
            android:layout_toRightOf="@id/avatarView"
            android:layout_alignTop="@id/avatarView"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:textAppearance="@style/StatusNameTextAppearance"
            tools:text="Poster" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvContactName"
            android:layout_alignStart="@id/tvContactName"
            android:layout_alignLeft="@id/tvContactName"
            android:text="@string/whats_your_status"
            android:textAppearance="@style/SetStatusLinkTextAppearance"
            android:gravity="center_vertical"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvTags"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="18dp"
            android:paddingStart="18dp"
            android:paddingLeft="18dp"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/rvTags"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:text="@string/urgent"
            app:buttonTint="@android:color/darker_gray"
            />

        <ImageButton
            android:id="@+id/btnQuickStatus"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_above="@id/rvTags"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@null"
            android:src="@drawable/ic_insert_emoticon_black_32dp"
            android:scaleType="centerInside"
            android:tint="?attr/colorPrimary"/>

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="34dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_alignTop="@id/btnQuickStatus"
            android:layout_toLeftOf="@id/btnQuickStatus"
            android:layout_toStartOf="@id/btnQuickStatus"
            >
            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="end"
                android:background="@null"
                android:src="@drawable/ic_location_on_black_32dp"
                android:scaleType="centerInside"
                android:tint="?attr/colorPrimary"/>
            <com.circleof6.view.RoundFrameLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                app:frameBorderWidth="0dp"
                app:frameInsetBorder="true"
                app:frameBorderColor="@android:color/white"
                android:layout_gravity="start|bottom"
                android:background="@android:color/white"
                >
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/ic_lock_black_16dp"
                    android:scaleType="centerInside"
                    android:tint="?attr/colorPrimary"/>
            </com.circleof6.view.RoundFrameLayout>
        </FrameLayout>

        <EditText
            android:id="@+id/editStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvContactName"
            android:layout_above="@id/btnQuickStatus"
            android:layout_alignStart="@id/tvContactName"
            android:layout_alignLeft="@id/tvContactName"
            android:textAppearance="@style/EditStatusTextAppearance"
            android:textColor="@android:color/black"
            android:gravity="top"
            />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
