<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image_college"
            android:layout_width="56dp"
            android:layout_height="56dp"
            tools:src="@drawable/app_icon"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/text_college_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            tools:text="name"
            android:maxLines="2"
            android:textColor="@color/purple"
            android:layout_toRightOf="@+id/image_college"
            android:layout_marginStart="23dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/image_arrow_expandable"
            android:layout_toStartOf="@+id/image_arrow_expandable"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/image_arrow_expandable"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/expand_arrow"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/purple"/>

</LinearLayout>