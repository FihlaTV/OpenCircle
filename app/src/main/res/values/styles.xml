<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
    </style>

    <style name="AppTheme.ShareApp" parent="AppTheme">
        <item name="colorPrimary">@color/primary_color_sharing_app</item>
        <item name="colorPrimaryDark">@color/primary_dark_color_sharing_app</item>
        <item name="android:windowBackground">@color/primary_color_sharing_app</item>
    </style>

    <style name="TitleDialogTextAppearance" parent="@android:style/TextAppearance.Holo.DialogWindowTitle"/>

    <style name="SetStatusLinkTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#888888</item>
    </style>

    <style name="StatusNameTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StatusDateTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="StatusTextAppearance" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>